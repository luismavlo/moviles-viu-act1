<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/anime_background_card"
    android:layout_marginVertical="4dp">

    <RelativeLayout
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagenAnime"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|start"
            />
        <TextView
            android:id="@+id/txtTituloAnime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="125dp"
            android:textAllCaps="true"
            tools:text="Prueba"/>
        <TextView
            android:id="@+id/txtAverageRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="125dp"
            android:layout_below="@+id/txtTituloAnime"
            tools:text="Prueba"/>
        <TextView
            android:id="@+id/txtStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="125dp"
            android:layout_below="@+id/txtAverageRating"
            tools:text="Prueba"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>